    <script>
        // Create floating particles for background
        function createParticles() {
            const container = document.getElementById('particles');
            const particleCount = 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Random properties
                const size = Math.random() * 10 + 5;
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                const animationDuration = Math.random() * 20 + 10;
                const delay = Math.random() * 5;
                const opacity = Math.random() * 0.4 + 0.1;
                
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${posX}%`;
                particle.style.top = `${posY}%`;
                particle.style.animation = `float ${animationDuration}s ease-in-out ${delay}s infinite`;
                particle.style.opacity = opacity;
                particle.style.background = `rgba(255, 255, 255, ${opacity})`;
                
                container.appendChild(particle);
                
                // Add animation keyframes dynamically
                const style = document.createElement('style');
                style.textContent = `
                    @keyframes float {
                        0% { transform: translate(0, 0) rotate(0deg); }
                        50% { transform: translate(${Math.random() * 100 - 50}px, ${Math.random() * 100 - 50}px) rotate(180deg); }
                        100% { transform: translate(0, 0) rotate(360deg); }
                    }
                `;
                document.head.appendChild(style);
            }
        }
        
        // Get IP and Country
        async function getIpAndCountry() {
            try {
                const ipResponse = await fetch('https://api.ipify.org?format=json');
                const ipData = await ipResponse.json();
                const ip = ipData.ip;
                document.getElementById('ip-text').textContent = `IP: ${ip}`;
                
                const countryResponse = await fetch(`https://ipapi.co/${ip}/json/`);
                const countryData = await countryResponse.json();
                
                const countryName = countryData.country_name || 'Unknown';
                const countryCode = (countryData.country_code || 'us').toLowerCase();
                
                document.getElementById('country-text').textContent = countryName;
                document.getElementById('flag-icon').style.backgroundImage = `url(https://flagcdn.com/32x24/${countryCode}.png)`;
            } catch (error) {
                document.getElementById('ip-text').textContent = 'IP: Unavailable';
                document.getElementById('country-text').textContent = 'Country: Unknown';
                console.error('Error fetching IP or country:', error);
            }
        }
        
        // Initialize ad counts
        let monetagCount = parseInt(localStorage.getItem('monetagCount')) || 0;
        let gigapubCount = parseInt(localStorage.getItem('gigapubCount')) || 0;
        let coins = parseInt(localStorage.getItem('coins')) || 0;
        
        document.getElementById('monetag-count').textContent = monetagCount;
        document.getElementById('gigapub-count').textContent = gigapubCount;
        
        // Page Navigation
        document.getElementById('monetag-btn').addEventListener('click', () => {
            document.getElementById('home-page').style.display = 'none';
            document.getElementById('monetag-page').style.display = 'flex';
        });
        
        document.getElementById('gigapub-btn').addEventListener('click', () => {
            document.getElementById('home-page').style.display = 'none';
            document.getElementById('gigapub-page').style.display = 'flex';
        });
        
        document.getElementById('monetag-back').addEventListener('click', () => {
            document.getElementById('monetag-page').style.display = 'none';
            document.getElementById('home-page').style.display = 'block';
        });
        
        document.getElementById('gigapub-back').addEventListener('click', () => {
            document.getElementById('gigapub-page').style.display = 'none';
            document.getElementById('home-page').style.display = 'block';
        });
        
        // Reset Button
        document.getElementById('reset-btn').addEventListener('click', () => {
            monetagCount = 0;
            gigapubCount = 0;
            coins = 0;
            
            localStorage.setItem('monetagCount', monetagCount);
            localStorage.setItem('gigapubCount', gigapubCount);
            localStorage.setItem('coins', coins);
            
            document.getElementById('monetag-count').textContent = monetagCount;
            document.getElementById('gigapub-count').textContent = gigapubCount;
            
            // Show confetti effect
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 }
            });
            
            // Show notification
            showNotification('Counters reset successfully!');
        });
        
        // Show notification function
        function showNotification(message) {
            const notification = document.createElement('div');
            notification.textContent = message;
            notification.style.position = 'fixed';
            notification.style.bottom = '20px';
            notification.style.left = '50%';
            notification.style.transform = 'translateX(-50%)';
            notification.style.backgroundColor = 'var(--success)';
            notification.style.color = 'white';
            notification.style.padding = '15px 25px';
            notification.style.borderRadius = '50px';
            notification.style.boxShadow = '0 5px 15px rgba(0,0,0,0.2)';
            notification.style.zIndex = '1000';
            notification.style.opacity = '0';
            notification.style.transition = 'opacity 0.3s';
            
            document.body.appendChild(notification);
            
            // Fade in
            setTimeout(() => {
                notification.style.opacity = '1';
            }, 10);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }
        
        // Monetag Ad Functions
        function showMonetagAd(zone, reward, btn) {
            btn.classList.add('loading');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading ad...';
            
            // Simulate ad loading
            setTimeout(() => {
                // In a real implementation, this would load the actual ad script
                const script = document.createElement('script');
                script.src = `//libtl.com/sdk.js?zone=${zone}`;
                script.dataset.zone = zone;
                document.head.appendChild(script);
                
                script.onload = () => {
                    // Simulate ad completion
                    setTimeout(() => {
                        // Update counts and coins
                        monetagCount++;
                        coins += reward;
                        
                        localStorage.setItem('monetagCount', monetagCount);
                        localStorage.setItem('coins', coins);
                        
                        document.getElementById('monetag-count').textContent = monetagCount;
                        
                        // Show success message
                        btn.innerHTML = `
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <div>Ad completed!</div>
                                <small>You earned ${reward} coins</small>
                            </div>
                        `;
                        
                        // Show confetti effect
                        confetti({
                            particleCount: 100,
                            spread: 70,
                            origin: { y: 0.6 }
                        });
                        
                        // Reset button after delay
                        setTimeout(() => {
                            btn.classList.remove('loading');
                            btn.innerHTML = `
                                <i class="fas fa-play-circle"></i>
                                <div>
                                    <div>বিজ্ঞাপন দেখুন ${zone.slice(-1)}</div>
                                    <small>Earn ${reward} coins</small>
                                </div>
                                <div class="reward-indicator">
                                    <i class="fas fa-coins"></i> +${reward}
                                </div>
                            `;
                        }, 2000);
                    }, 2000);
                };
            }, 1500);
        }
        
        // Gigapub Ad Functions
        function showGigapubAd(id, reward, btn) {
            btn.classList.add('loading');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading ad...';
            
            // Simulate ad loading
            setTimeout(() => {
                // In a real implementation, this would load the actual ad script
                const script = document.createElement('script');
                script.src = `https://ad.gigapub.tech/script?id=${id}`;
                document.head.appendChild(script);
                
                script.onload = () => {
                    // Simulate ad completion
                    setTimeout(() => {
                        // Update counts and coins
                        gigapubCount++;
                        coins += reward;
                        
                        localStorage.setItem('gigapubCount', gigapubCount);
                        localStorage.setItem('coins', coins);
                        
                        document.getElementById('gigapub-count').textContent = gigapubCount;
                        
                        // Show success message
                        btn.innerHTML = `
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <div>Ad completed!</div>
                                <small>You earned ${reward} coins</small>
                            </div>
                        `;
                        
                        // Show confetti effect
                        confetti({
                            particleCount: 100,
                            spread: 70,
                            origin: { y: 0.6 }
                        });
                        
                        // Reset button after delay
                        setTimeout(() => {
                            btn.classList.remove('loading');
                            btn.innerHTML = `
                                <i class="fas fa-play-circle"></i>
                                <div>
                                    <div>বিজ্ঞাপন দেখুন ${id === '1715' ? '1' : id === '1535' ? '2' : '3'}</div>
                                    <small>Earn ${reward} coins</small>
                                </div>
                                <div class="reward-indicator">
                                    <i class="fas fa-coins"></i> +${reward}
                                </div>
                            `;
                        }, 2000);
                    }, 2000);
                };
            }, 1500);
        }
        
        // Ad Button Handlers
        document.querySelectorAll('.ad-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (this.classList.contains('loading')) return;
                
                const adType = this.dataset.ad;
                
                switch(adType) {
                    case 'monetag1':
                        showMonetagAd('9717336', 2, this);
                        break;
                        
                    case 'monetag2':
                        showMonetagAd('9706744', 3, this);
                        break;
                        
                    case 'monetag3':
                        showMonetagAd('9697264', 5, this);
                        break;
                        
                    case 'gigapub1':
                        showGigapubAd('1715', 4, this);
                        break;
                        
                    case 'gigapub2':
                        showGigapubAd('1535', 6, this);
                        break;
                        
                    case 'gigapub3':
                        showGigapubAd('1200', 8, this);
                        break;
                }
            });
        });
        
        // Initialize the app
        window.onload = function() {
            createParticles();
            getIpAndCountry();
            
            // Show welcome message
            setTimeout(() => {
                showNotification('Welcome to TAKA GHOR! Start earning coins by watching ads');
            }, 2000);
        };
    </script>
</body>
</html>
